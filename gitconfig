[init]
	defaultBranch = main
[gpg]
	program = gpg
[commit]
	gpgSign = true
[tag]
  forceSignAnnotated = true
[push]
  autoSetupRemote = true
[alias]
  a = add
  b = branch
  c = commit
  d = diff
  fl = flow
  flr = flow release
  flrs = flow release start
  flrf = flow release finish
  flf = flow feature
  flfs = flow feature start
  flff = flow feature finish
  fall = fetch --all
  g = grep
  j = jump
  l = list
  m = merge
  o = checkout
  p = pull
  s = status
  w = whatchanged
  graph = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
  list = log --oneline --decorate --all
  gr = graph
  refs = for-each-ref --format='%(color:reset)%(color:red)%(push:track) %(color:green)[%(objecttype)] %(color:blue)%(color:bold)%(refname:short) ' --color
  r = refs
  chb = checkout -b
  ignore = update-index --assume-unchanged
  unignore = update-index --no-assume-unchanged
  ignored = !git ls-files -v | grep "^[[:lower:]]"
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
[interactive]
	diffFilter = diff-so-fancy --patch
